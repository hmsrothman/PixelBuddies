#version 400 core

layout (location = 0) in vec2 pos;
layout (location = 1) in vec2 uv;
layout (location = 2) in vec4 color;


out vec4 fragColor;
out vec2 fragUV;

void main(){
	gl_Position.xy = pos.xy;
	gl_Position.z = 0;
	gl_Position.w = 1;
	fragColor = vec4(uv.x);
	fragUV = vec2(pos.x,-pos.y);
}